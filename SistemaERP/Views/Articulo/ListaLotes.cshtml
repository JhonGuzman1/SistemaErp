@using Datos;
@using Entidad.Estados;
@model List<Lote>



<table class="table table-bordered table-hover" id="tabla_lote">

    <thead>
        <tr>
            <th>NRO LOTE</th>
            <th>FECHA INGRESO</th>
            <th>FECHA VENCIMIENTO</th>
            <th>CANTIDAD</th>
            <th>STOCK</th>
            <th>ESTADO</th>
           
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var i in Model)
            {
                <tr>

                    <td>@i.NroLote</td>
                    <td>@i.FechaIngreso.ToString("dd/MM/yyyy")</td>
                    <td>@(i.FechaVencimiento!=null ?i.FechaVencimiento.Value.ToString("dd/MM/yyyy"):"" )</td>
                    <td>@i.Cantidad</td>
                    <td>@i.Stock</td>
                    @{

                        switch (i.Estado)
                        {
                            case (int)EstadoLote.Activo:

                                <td>Activo</td>

                                break;

                            case (int)EstadoLote.Anulado:

                                <td>Anulado</td>

                                break;

                            case (int)EstadoLote.SinStock:

                                <td>Agotado</td>

                                break;

                        }

                    }


                </tr>
            }
                        }

    </tbody>

</table>


